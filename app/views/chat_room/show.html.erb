<!-- Transparent Robot img -->
<div class="retrorobot">&nbsp;</div>


  <% if @messages.count > 1 %>
  <% @messages.each do |m| %>

  <!-- Class chatbubblesty 1 & 2 refers to chatbubble style -->
<div class="">
  <%= m.sender == 1 ? ("<span class='chatbubblesty2 shadow'><strong>Truth Seeker</strong>" + ": " + m.try(:text).to_s + "</span>").html_safe : ("<span class='chatbubblesty shadow'><strong>Chat_bot</strong>" + ": " + m.try(:text).to_s + "</span>").html_safe%>
</div>

    <br>
    <br>
  <% end %>
<% end %>
<%= link_to "Delete", @message, :method => :delete %>
<%= form_tag("/chat_room", method: "post") do %>
  <%= text_field_tag(:q, "", autofocus: true)  %>

  <%= submit_tag("talk") %>

<% end %>
